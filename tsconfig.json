{
    "compilerOptions": {
        "target": "es2020",
        "module": "esnext",
        "sourceMap": true,
        "outDir": "build",
        "strict": true,
        "moduleResolution": "node",
        "noImplicitOverride": false,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "strictNullChecks": true,
        "declaration": true,
        "declarationDir": "types",
        "emitDeclarationOnly": true,
        "removeComments": true,
        "resolveJsonModule": true
    },
    "include": [
        "index.ts",
        "src/**/*.ts",
        "rollup.config.mts"
    ]
}